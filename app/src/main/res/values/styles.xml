<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="PropertyHeaderStyle">
        <item name="android:textColor">#434c69</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#40000000</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="HorizontalSeparator.NoVerticalMargin" parent="HorizontalSeparator">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ListElementTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="SubTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#a0a0a0</item>

        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="SubTitleWithoutSeparatorAbove" parent="SubTitle">
        <item name="android:layout_marginTop">23dp</item>
    </style>

    <style name="BadgeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/capsule_frame</item>

    </style>

    <style name="propertyElementStyle">
        <item name="android:paddingBottom">@dimen/property_bottom_padding</item>
    </style>

    <style name="ColorSelectionButtonStyle">
        <item name="android:layout_width">@dimen/color_selection_button_size</item>
        <item name="android:layout_height">@dimen/color_selection_button_size</item>
    </style>


    <style name="ShortTextInputStyle">
        <item name="android:background">@drawable/text_field_singleline</item>
        <item name="android:inputType">text|textShortMessage</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/hint_short_text</item>
        <item name="android:textColorHint">#66000000</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="LongTextInputStyle">
        <item name="android:gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/hint_long_text</item>
        <item name="android:textColorHint">#33000000</item>
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">12dp</item>
        <item name="android:minLines">3</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="whitePlusButtonStyle">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:padding">17dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/plus_dark</item>
    </style>

    <style name="whiteMinusButtonStyle" parent="whitePlusButtonStyle">
        <item name="android:src">@drawable/minus_dark</item>
    </style>

    <style name="whiteButtonLongStyle">
        <item name="android:background">@drawable/capsule_button_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="numberPropertyDigitViewStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textButtonTransparentLight">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/transparent_button_background</item>
    </style>

    <style name="SubTitleInverse" parent="SubTitle">
        <item name="android:textColor">#eeffffff</item>
    </style>

    <style name="flatGreenButtonStyle">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">40dp</item>


    </style>

    <style name="expandedPanelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">#afffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/transparent_button_background</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">12dp</item>

    </style>
</resources>
