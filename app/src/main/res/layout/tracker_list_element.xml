<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tracker_list_element_collapsed_height"
    android:background="@drawable/frontal_color_selectable_element_background"
    android:minHeight="@dimen/project_list_element_min_height">

    <View
        android:id="@+id/color_bar"
        android:layout_width="@dimen/project_list_color_bar_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#ff8e38" />

    <TextView
        android:id="@+id/name"
        style="@style/ListElementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="Project" />

    <ImageButton
        android:id="@+id/ui_expand_button"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@drawable/transparent_button_background"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/down_dark" />
</RelativeLayout>