<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tracker_list_element_collapsed_height"
    android:background="@drawable/frontal_color_selectable_element_background">

    <View
        android:id="@+id/color_bar"
        android:layout_width="@dimen/tracker_list_color_bar_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#ff8e38" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/color_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ui_expanded_view"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/name"
                style="@style/ListElementTitle"
                android:textSize="20sp"
                android:textColor="#575757"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Project" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/tracker_list_information_bottom_padding"
                android:layout_alignParentLeft="true"
                android:gravity="bottom">


                <TextView
                    android:id="@+id/ui_last_logging_time"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    style="@style/trackerListInformationTextViewStyle"
                    android:layout_gravity="bottom"
                    android:text="YESTERDAY\n06:30 PM"
                    android:gravity="bottom" />

                <TextView
                    android:id="@+id/ui_today_logging_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/trackerListInformationTextViewStyle"
                    android:text="@string/msg_todays_log"
                    android:layout_gravity="bottom"
                    android:gravity="bottom" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/ui_expand_button"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_separator"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/down_dark" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ui_expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSecondary"
            android:orientation="horizontal"
            android:textAlignment="viewEnd"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ui_button_edit"
                style="@style/expandedPanelButton"
                android:drawableStart="@drawable/pen"
                android:text="@string/msg_edit" />

            <Button
                android:id="@+id/ui_button_list"
                style="@style/expandedPanelButton"
                android:drawableStart="@drawable/list"
                android:text="@string/msg_data_list" />

            <Button
                android:id="@+id/ui_button_remove"
                style="@style/expandedPanelButton"
                android:drawableStart="@drawable/ex"
                android:text="@string/msg_remove" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>