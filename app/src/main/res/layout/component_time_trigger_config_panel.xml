<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:drawable/divider_horizontal_bright"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        style="@style/propertyGroupSinglelineStyle"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/PropertyHeaderStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/msg_trigger_time_config_type" />

        <Spinner
            android:id="@+id/ui_spinner_config_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ui_interval_group"
        style="@style/propertyGroupMultilineStyle"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/propertyMultilineHeaderStyle"
            android:layout_gravity="center_vertical"
            android:text="@string/msg_trigger_time_config_interval" />

        <kr.ac.snu.hcil.omnitrack.ui.components.common.DurationPicker
            android:id="@+id/ui_duration_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <kr.ac.snu.hcil.omnitrack.ui.components.common.DateTimePicker
        android:id="@+id/ui_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numbersBackgroundColor="@color/colorSecondary"
        android:numbersSelectorColor="@color/colorSecondary" />


    <LinearLayout
        style="@style/propertyGroupMultilineStyle"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/propertyMultilineHeaderStyle"
            android:layout_gravity="center_vertical"
            android:text="@string/msg_trigger_time_config_repeat_range" />

        <kr.ac.snu.hcil.omnitrack.ui.components.common.SelectionView
            android:id="@+id/ui_day_of_week_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</LinearLayout>