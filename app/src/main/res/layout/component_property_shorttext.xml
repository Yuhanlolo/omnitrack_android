<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/property_left_padding"
    android:paddingRight="@dimen/property_right_padding"
    android:paddingTop="@dimen/property_top_padding"
    android:paddingBottom="@dimen/property_bottom_padding"
    >

    <include layout="@layout/common_subheader"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:maxLines="1"
        android:inputType="textShortMessage"
        android:layout_gravity="center_horizontal" />
</LinearLayout>