<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_tracker_assign_panel"
    style="@style/propertyGroupMultilineStyle"
    android:layout_gravity="center_horizontal">

    <TextView
        style="@style/propertyMultilineHeaderStyle"
        android:layout_gravity="center_vertical"
        android:text="@string/msg_trigger_attached_trackers" />

    <kr.ac.snu.hcil.omnitrack.ui.pages.trigger.TrackerAssignPanel
        android:id="@+id/ui_tracker_assign_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp" />

</LinearLayout>