<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/ui_button_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/timepoint_date_button_background"
            android:text="February 2nd, 2016, Sunday"
            android:textAllCaps="false"
            android:textColor="@color/titleTextColor"
            android:textSize="15dp" />
        <!--
                <Spinner
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ui_time_zone_spinner"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
        -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <NumberPicker
            android:id="@+id/leftPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/time_digit_separator" />

        <NumberPicker
            android:id="@+id/middlePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/time_digit_separator" />

        <NumberPicker
            android:id="@+id/rightPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

    </LinearLayout>

</LinearLayout>