<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_separator_light"
    android:orientation="vertical">

    <kr.ac.snu.hcil.omnitrack.views.properties.ComboBoxPropertyView
        android:id="@+id/ui_event_trigger_measure_selection"
        style="@style/propertyGroupSinglelineStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/msg_trigger_data_measure_selection" />

    <LinearLayout
        android:id="@+id/ui_alarm_group"
        style="@style/propertyGroupMultilineStyle"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/propertyMultilineHeaderStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:text="@string/msg_trigger_data_comparison_method" />


        <kr.ac.snu.hcil.omnitrack.ui.pages.trigger.conditions.data.DataDrivenComparisonSettingView
            android:id="@+id/ui_condition_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />

    </LinearLayout>


</LinearLayout>