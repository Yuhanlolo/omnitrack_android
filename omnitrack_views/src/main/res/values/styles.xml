<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundButtonStyle">
        <item name="android:layout_width">@dimen/button_height_normal</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/round_button_background</item>
    </style>


    <style name="PropertyHeaderStyle">
        <item name="android:textColor">#434c69</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PropertyHeaderStyle.withMargin" parent="PropertyHeaderStyle">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>


    <style name="numberPropertyDigitViewStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>


    <style name="TinyCircularFancyButtonStyle">

        <item name="android:layout_width">@dimen/button_height_tiny</item>
        <item name="android:layout_height">@dimen/button_height_tiny</item>
        <item name="fb_defaultColor">@color/colorAccent_Light</item>
        <item name="fb_radius">300dp</item>
        <item name="fb_focusColor">@color/colorRed</item>
        <item name="fb_iconPaddingLeft">0dp</item>
        <item name="fb_iconPaddingRight">0dp</item>
        <item name="fb_iconResource">@drawable/ic_arrow_downward_black_24dp</item>
        <item name="drawableTint">#FFF</item>
    </style>

    <style name="TinyCircularFancyButtonStyle.blackAndWhite" parent="TinyCircularFancyButtonStyle">
        <item name="fb_defaultColor">@color/editTextFormBackground</item>
        <item name="fb_focusColor">@color/colorPointed_Light</item>
        <item name="fb_iconResource">@drawable/ic_arrow_downward_black_24dp</item>
        <item name="drawableTint">@color/textColorLight</item>
    </style>

    <style name="ShortTextFormStyle">
        <item name="android:background">@drawable/text_field_singleline</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textShortMessage</item>


        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColorMid</item>

        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>


    <style name="linearLayoutWithHorizontalDivider">
        <item name="android:divider">@drawable/horizontal_divider_light</item>
        <item name="android:dividerPadding">@dimen/activity_horizontal_margin</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="linearLayoutWithHorizontalDivider.Light.Nomargin" parent="linearLayoutWithHorizontalDivider">
        <item name="android:divider">@drawable/bottom_separator_thin</item>
        <item name="android:dividerPadding">0dp</item>
    </style>


</resources>